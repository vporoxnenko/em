<?xml version="1.0"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.nsisc</groupId>
	<artifactId>em</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0-SNAPSHOT</version>

	<distributionManagement>
		<repository>
			<id>maven.nsisc.com</id>
			<name>Internal Releases</name>
			<url>http://64.186.145.31:8081/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>maven.nsisc.com</id>
			<name>Internal Releases</name>
			<url>http://64.186.145.31:8081/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
	
	<repositories>
		<repository>
			<id>maven.nsisc.com</id>
			<name>NSISC Maven Repository</name>
			<url>http://64.186.145.31:8081/nexus/content/groups/public</url>
		</repository>
		<repository>
			<id>maven.jahia.org</id>
			<name>maven.jahia.org</name>
			<layout>default</layout>
			<url>http://maven.jahia.org/maven2</url>
		</repository>
	</repositories>

	<modules>
		<module>em-connector</module>
		<module>em-gxt</module>
	</modules>

	<build>
		<finalName>${artifactId}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
		   <dependency>
			  <groupId>javax</groupId>
			  <artifactId>javaee-api</artifactId>
			  <version>6.0</version>
		  </dependency>
		  <dependency>
			<groupId>com.nsisc.em</groupId>
			<artifactId>em-connector</artifactId>
			<version>${project.version}</version>
		</dependency>
		</dependencies>
	</dependencyManagement>
</project>
